@model IEnumerable<ST10140587_Prog6212_Part2.Models.Claim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Claims</title>
    <link rel="stylesheet" href="~/css/dark-theme.css" />
</head>
<body>
    <div class="container">
        <h2 class="page-title">Approved Claims</h2>

        @if (!Model.Any())
        {
            <p class="no-claims">No approved claims found.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@(claim.HoursWorked * claim.HourlyRate)</td>
                            <td>@claim.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="form-actions">
            <a href="@Url.Action("GeneratePdfReport", "HR")" class="btn btn-success">Download PDF Report</a>
            <a href="@Url.Action("GenerateExcelReport", "HR")" class="btn btn-outline-dark">Download Excel Report</a>
        </div>
    </div>
</body>
</html>
